        if ($("#inventorygauge").length) {
          var barChartCanvas = $("#inventorygauge").get(0).getContext("2d");
          // This will get the first returned node in the jQuery collection.
          var data = {
            labels: productname,
            datasets: [{
              label: 'Number of Available Stock Left',
              data: totalstock,
              backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
              ],
              borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
              ],
              borderWidth: 1
            }]
          };

          var options = {
            scales: {
              yAxes: [{
                ticks: {
                  beginAtZero: true
                }
              }]
            },
            legend: {
              display: false
            },
            elements: {
              point: {
                radius: 0
              }
            }

          };

          var barChart = new Chart(barChartCanvas, {
            type: 'bar',
            data: data,
            options: options
          });
        }

        $("#mostselling").bind('ajax:success', function(selling_results) {
            var barData = {
                label: selling_results.product_sku,
                datasets: [{
                    label: 'Items sold',
                    fillColor: '#382765',
                    stockResults: selling_results.jacket_sold
                }]
            };
            var context = document.getElementById('mostselling').getContext('2d');
            var clientsChart = new Chart(context).Bar(barData);
        });
