<% include ../partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
        <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <% if (messages.error) { %>
                        <div class="row purchace-popup">
                            <div class="col-12">
                                <span class="d-flex alifn-items-center">
                                    <p class="text-danger"><%- messages.error %></p>
                                    <i class="mdi mdi-close popup-dismiss"></i>
                                </span>
                            </div>
                        </div>
                    <% } %>

                    <% if (messages.success) { %>
                        <div class="row purchace-popup">
                            <div class="col-12">
                                <span class="d-flex alifn-items-center">
                                    <p class="text-success"><%- messages.success %></p>
                                    <i class="mdi mdi-close popup-dismiss"></i>
                                </span>
                            </div>
                        </div>
                    <% } %>

                <!-- INDEX CONTAINER -->

                <!-- BLOCK QUOTE -->
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a href="/admin/stalltransactions/add"><button type="button" class="btn btn-outline-success title-btn">&lt;</button></a>
                            <i class="menu-icon mdi mdi-plus text-info icon-md table-icon"></i>
                            <h4 class="card-title title">Add Stall Transaction</h4>
                            <div class="form">
                                <form class="form" action="/admin/stalltransactions/add" method="POST" name="addstalltranssaction">
                                    <div class="form-group">
                                        <label for="eventname">Event Name</label>
                                        <input type="text" class="form-control" id="eventname" name="eventname" placeholder="Event Name" value="<%= eventname %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="eventplace">Event Place</label>
                                        <input type="text" class="form-control" id="eventplace" name="eventplace" placeholder="Event Place" value="<%= eventplace %>" required>
                                    </div>
                                    <!-- DATE PICKER FOR EVENT DATE -->
                                    <div class="form-group">
                                        <label for="eventdate">Event Date</label>
                                        <input type="date" class="form-control" name="eventdate" id="eventdate" value="<%= eventdate %>">
                                    </div>
                                    <div class="form-group">
                                            <label for="totalamount">Total Amount</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-primary border-primary">
                                                <span class="input-group-text bg-transparent text-white">PHP</span>
                                            </div>
                                            <input type="text" class="form-control" id="totalamount" name="totalamount" placeholder="Total Amount" value="<%= totalamount %>" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Product SKU</th>
                                                        <th>Product Name</th>
                                                        <th>Product Size</th>
                                                        <th>Stocks Sold</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if(data) { %>
                                                        <% data.forEach(function(product) { %>
                                                            <tr>
                                                                <input type="hidden" name="productsku" value="<%= product.product_sku %>">
                                                                <td><%= product.product_sku %></td>
                                                                <td><%= product.product_name %></td>
                                                                <td><%= product.product_sizename %></td>
                                                                <td>
                                                                    <div class="form-group">
                                                                        <input type="text" class="form-control" name="itemsold[]" value="<%= itemsold %>">
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        <% }) %>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success btn-submit" type="submit" name="addproduct" value="OKKUUUURRRTT">Add Stall Transaction</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!-- END BLOCK QUOTE -->


        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="container-fluid clearfix">
                    <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                    </span>
                </div>
            </footer>
                  <!-- partial -->
        </div>
    <!-- main-panel ends -->
<% include ../partials/admin-footer.ejs %>
