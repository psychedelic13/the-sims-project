<% include partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <% if (messages.error) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-danger"><%- messages.error %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <% if (messages.success) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-success"><%- messages.success %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <div class="row">
                <div id="main" class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a href="/admin/inventory/product/add"><button type="button" class="btn btn-outline-success title-btn">Add Product</button></a>
                            <i class="menu-icon mdi mdi-cube text-info icon-md table-icon"></i>
                            <h4 class="card-title table-name">Inventory</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Product Category</th>
                                            <th>Product Origin</th>
                                            <th>Product Name</th>
                                            <th>Price</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <!--
                                        Using forEach loop for the products array

                                        myArray.forEach(function(el, index) {
                                            // el - current element, i - index
                                        });
                                    -->
                                    <tbody>
                                        <% if(data) { %>
                                            <% data.forEach(function(product) { %>
                                                <tr>
                                                    <td><%= product.product_category %></td>
                                                    <td><%= product.product_origin %></td>
                                                    <td><%= product.product_name %></td>
                                                    <td>PHP <%= parseFloat(product.product_price) %></td>
                                                    <td>
                                                        <a href="/admin/inventory/product/edit/<%= product.product_no %>" class="btn btn-icons btn-primary"><i class="mdi mdi-pencil"></i></a><!-- Edit Product -->
                                                        <a href="/admin/inventory/product/<%= product.product_no %>" class="btn btn-icons btn-info"><i class="mdi mdi-view-list"></i></a><!-- Display Product -->
                                                        <a href="/admin/inventory/stocks/add/<%= product.product_no %>" class="btn btn-icons btn-success"><i class="mdi mdi-library-plus"></i></a><!-- Display Product -->
                                                        <a href="/admin/inventory/product/phaseout/<%= product.product_no %>" class="btn btn-icons btn-warning"><i class="mdi mdi-minus-circle-outline"></i></a><!-- Phaseout Product -->
                                                        <form class="form-button" action="/admin/inventory/product/delete/<%= product.product_no %>" method="post">
                                                            <button type="submit" name="delete" value="delete" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-icons btn-danger"><i class="mdi mdi-delete-forever"></i></button><!-- Delete Product -->
                                                            <input type="hidden" name="_method" value="DELETE">
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            <!-- END BLOCK QUOTE -->
            </div>

        <!-- content-wrapper ends -->
        </div>
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                </span>
            </div>
        </footer>
    <!-- partial -->
    </div>
    <!-- main-panel ends -->
<% include partials/admin-footer.ejs %>
