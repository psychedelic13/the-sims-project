<% include ../../partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
        <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <% if (messages.error) { %>
                        <div class="row purchace-popup">
                            <div class="col-12">
                                <span class="d-flex alifn-items-center">
                                    <p class="text-danger"><%- messages.error %></p>
                                    <i class="mdi mdi-close popup-dismiss"></i>
                                </span>
                            </div>
                        </div>
                    <% } %>

                    <% if (messages.success) { %>
                        <div class="row purchace-popup">
                            <div class="col-12">
                                <span class="d-flex alifn-items-center">
                                    <p class="text-success"><%- messages.success %></p>
                                    <i class="mdi mdi-close popup-dismiss"></i>
                                </span>
                            </div>
                        </div>
                    <% } %>

                <!-- INDEX CONTAINER -->

                <!-- BLOCK QUOTE -->
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a href="/admin/inventory"><button type="button" class="btn btn-outline-success title-btn">&lt;</button></a>
                            <i class="menu-icon mdi mdi-plus text-info icon-md table-icon"></i>
                            <h4 class="card-title title">Add Product</h4>
                            <div class="form">
                                <form class="form" action="add" method="POST" name="addproduct">
                                    <div class="form-group">
                                        <label for="productslug">Product Slug</label>
                                        <input type="text" class="form-control" id="productslug" name="productslug" placeholder="Product Slug" value="<%= productslug %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="productcategory">Product Category</label>
                                        <input type="text" class="form-control" id="productcategory" name="productcat" placeholder="Product Category" value="<%= productcat %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="productinspiration">Product Inspiration</label>
                                        <input type="text" class="form-control" id="productinspiration" name="productorigin" placeholder="Product Inspiration" value="<%= productorigin %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="productname">Product Name</label>
                                        <input type="text" class="form-control" id="productname" name="productname" placeholder="Product Name" value="<%= productname %>" required>
                                    </div>
                                    <div class="form-group">
                                            <label for="productprice">Product Price</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-primary border-primary">
                                                <span class="input-group-text bg-transparent text-white">PHP</span>
                                            </div>
                                            <input type="text" class="form-control" id="productprice" name="productprice" placeholder="Product Price" value="<%= productprice %>" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleTextarea1">Product Description</label>
                                        <textarea class="form-control" id="exampleTextarea1" name="productdesc" rows="4" value="<%= productdesc %>" required></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success btn-submit" type="submit" name="addproduct" value="OKKUUUURRRTT">Add Product</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!-- END BLOCK QUOTE -->


        <!-- content-wrapper ends -->
