<% include ../../partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <% if (messages.error) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-danger"><% messages.error %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <% if (messages.success) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-success"><% messages.success %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <!-- INDEX CONTAINER -->

            <!-- BLOCK QUOTE -->
            <div id="editproduct" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <a href="/admin/inventory"><button type="button" class="btn btn-outline-success title-btn">&lt;</button></a>
                        <i class="menu-icon mdi mdi-pencil text-info icon-md table-icon"></i>
                        <h4 class="card-title title">Edit Product</h4>
                        <div class="form">
                            <form class="form" action="/admin/inventory/product/edit/<%= productno %>" method="post" name="editproduct">
                                <div class="form-group">
                                    <label for="productslug">Product Slug</label>
                                    <input type="text" class="form-control" id="productslug" name="productslug" placeholder="Product Slug" value="<%= productslug %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="productcategory">Product Category</label>
                                    <input type="text" class="form-control" id="productcat" name="productcat" placeholder="Product Category" value="<%= productcat %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="productinspiration">Product Inspiration</label>
                                    <input type="text" class="form-control" id="productinspiration" name="productorigin" placeholder="Product Inspiration" value="<%= productorigin %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="productname">Product Name</label>
                                    <input type="text" class="form-control" id="productname" name="productname" placeholder="Product Name" value="<%= productname %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleTextarea1">Product Description</label>
                                    <textarea class="form-control" id="exampleTextarea1" name="productdesc" rows="4" required><%= productdesc %></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-submit" type="submit" name="editproduct" value="OKKUUUURRRTT">Edit Product</button>
                                </div>
                                <input type="hidden" name="_method" value="PUT" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- END BLOCK QUOTE -->


        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                    </span>
            </div>
        </footer>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
<% include ../../partials/admin-footer.ejs %>
