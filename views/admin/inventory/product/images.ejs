<% include ../partials/admin-header.ejs %>
<!-- MAIN CONTENTS -->
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <% if (messages.error) { %>
        <div class="row purchace-popup">
            <div class="col-12">
                <span class="d-flex alifn-items-center">
                            <p class="text-danger"><% messages.error %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
            </div>
        </div>
        <% } %>

        <% if (messages.success) { %>
        <div class="row purchace-popup">
            <div class="col-12">
                <span class="d-flex alifn-items-center">
                            <p class="text-success"><% messages.success %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
            </div>
        </div>
        <% } %>

        <div class="row">
            <div id="main" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <i class="menu-icon mdi mdi-cube text-info icon-md table-icon"></i>
                        <h4 class="card-title table-name">Product Images</h4>
                        <div class="form">
                            <form class="form" action="add" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Upload Product Photo</label>
                                    <input type="file" name="images[]" class="file-upload-default" multiple>
                                    <div class="input-group col-md-12">
                                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
                                        <span class="input-group-append">
                                            <button class="file-upload-browse btn btn-info" type="button">Upload</button>
                                        </span>
                                    </div>
                                </div>
                                <input type="submit" name="submit" value="submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% if (data) { %>
            <% data.forEach(function(image) { %>
                <div class="row">
                    <div class="col-md-<%= division %> grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <img src="<%= image.image_path %>" alt="<%= image.image_no %>">
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
        <!-- content-wrapper ends -->
    </div>
    <!-- partial:partials/_footer.html -->
    <footer class="footer">
        <div class="container-fluid clearfix">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                </span>
        </div>
    </footer>
    <!-- partial -->
</div>
<!-- main-panel ends -->
<% include ../partials/admin-footer.ejs %>
