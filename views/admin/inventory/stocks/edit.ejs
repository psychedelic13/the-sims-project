<% include ../../partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <% if (messages.error) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-danger"><% messages.error %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <% if (messages.success) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-success"><% messages.success %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <div class="row">
                <div id="main" class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a href="/inventory/stock/display/<%= productno %>"><button type="button" class="btn btn-outline-success title-btn">&lt;</button></a>
                            <i class="menu-icon mdi mdi-cube text-info icon-md table-icon"></i>
                            <h4 class="card-title table-name">Edit Size</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Product SKU</th>
                                            <th>Product Size(Slug)</th>
                                            <th>Product Size(Name)</th>
                                            <th>Initial Stock</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <!--
                                        Using forEach loop for the products array

                                        myArray.forEach(function(el, index) {
                                            // el - current element, i - index
                                        });
                                    -->
                                    <tbody>
                                        <% if(data) { %>
                                            <% data.forEach(function(product) { %>
                                                <form action="/inventory/stock/edit/<%= productno %>" method="post" name="addsize">
                                                    <tr>
                                                        <td></td>
                                                        <td><input type="text" name="sizeslug[]" value="<%= sizeslug %>"></td>
                                                        <td><input type="text" name="sizename[]" value="<%= sizename %>"></td>
                                                        <td><input type="text" name="initialstock[]" value="<%= initialstock %>"></td>
                                                        <!-- Add more rows -->
                                                        <button type="button" name="&ps;"></button>
                                                    </tr>
                                                    <input type="submit" name="Submit" value="OKKKKKUURTTTT">
                                                </form>
                                            <% }) %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            <!-- END BLOCK QUOTE -->
            </div>

        <!-- content-wrapper ends -->
        </div>
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                </span>
            </div>
        </footer>
    <!-- partial -->
    </div>
    <!-- main-panel ends -->
<% include ../../partials/admin-footer.ejs %>
