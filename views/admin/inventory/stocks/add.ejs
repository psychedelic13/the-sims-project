<% include ../../partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <% if (messages.error) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-danger"><% messages.error %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <% if (messages.success) { %>
                <div class="row purchace-popup">
                    <div class="col-12">
                        <span class="d-flex alifn-items-center">
                            <p class="text-success"><% messages.success %></p>
                            <i class="mdi mdi-close popup-dismiss"></i>
                        </span>
                    </div>
                </div>
            <% } %>

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <a href="/admin/inventory/product/<%= productno %>"><button type="button" class="btn btn-outline-success title-btn">&lt;</button></a>
                        <i class="menu-icon mdi mdi-cube text-info icon-md table-icon"></i>
                        <h4 class="card-title table-name">Add Size</h4><br><br><br>
                        <div class="form">
                            <form class="form" action="/admin/inventory/stocks/add/<%= productno %>" method="post" name="addsize">
                                <div class="form-group">
                                    <label>Product Name</label><br>
                                    <%= product_name %>
                                </div>
                                <div class="form-group">
                                    <label for="cog">Cost of Goods</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-primary border-primary">
                                            <span class="input-group-text bg-transparent text-white">PHP</span>
                                        </div>
                                        <input type="text" class="form-control" id="cog" name="cog" placeholder="Production Cost" value="<%= cog %>" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="table-responsive">
                                        <table id="addstock" class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Product SKU</th>
                                                    <th>Product Size(Slug)</th>
                                                    <th>Product Size(Name)</th>
                                                    <th>Initial Stock</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(data) { %>
                                                    <% data.forEach(function(product) { %>
                                                        <tr>
                                                            <td><%= product.product_sku %></td>
                                                            <td><%= product.size_slug %></td>
                                                            <td><%= product.size_name %></td>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                    <% }) %>
                                                <% } %>
                                                <tr>
                                                    <td></td>
                                                    <td>
                                                        <input class="form-control" type="text" name="sizeslug[]" value="<%= sizeslug %>">
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="text" name="sizename[]" value="<%= sizename %>">
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="text" name="initialstock[]" value="<%= initialstock %>">
                                                    </td>
                                                    <!-- Add more rows -->
                                                    <td><button class="form-control" type="button" name="&ps;" onclick="return moretextbox();"></button></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-submit" type="submit" name="addsize" value="OKKUUUURRRTT">Add Size</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END BLOCK QUOTE -->

        <!-- content-wrapper ends -->
        </div>
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                </span>
            </div>
        </footer>
    <!-- partial -->
    </div>
    <!-- main-panel ends -->
<% include ../../partials/admin-footer.ejs %>
