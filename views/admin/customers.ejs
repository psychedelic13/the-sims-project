<% include partials/admin-header.ejs %>
    <!-- MAIN CONTENTS -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="content-wrapper">
                <% if (messages.error) { %>
                    <div class="row purchace-popup">
                        <div class="col-12">
                            <span class="d-flex alifn-items-center">
                                <p class="text-danger"><%- messages.error %></p>
                                <i class="mdi mdi-close popup-dismiss"></i>
                            </span>
                        </div>
                    </div>
                <% } %>

                <% if (messages.success) { %>
                    <div class="row purchace-popup">
                        <div class="col-12">
                            <span class="d-flex alifn-items-center">
                                <p class="text-success"><%- messages.success %></p>
                                <i class="mdi mdi-close popup-dismiss"></i>
                            </span>
                        </div>
                    </div>
                <% } %>

            <div class="row">
                <div id="main" class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <i class="menu-icon mdi mdi-cube text-info icon-md table-icon"></i>
                            <h4 class="card-title table-name">Customer Profiles</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Successful Transaction</th>
                                            <th>Cancelled Transaction</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(data) { %>
                                            <% data.forEach(function(customer) { %>
                                            <tr>
                                                <td><%= customer.first_name %> <%= customer.last_name %></td>
                                                <td><%= customer.email_address %></td>
                                                <td><%= customer.successful_trans %></td>
                                                <td><%= customer.cancelled_trans %></td>
                                                <td>
                                                    <!-- Display the summary -->
                                                    <a href="#" class="btn btn-icons btn-info"><i class="mdi mdi-view-list"></i></a>
                                                    <a href="/admin/customers/edit/<%= customer.customer_no %>" class="btn btn-icons btn-primary"><i class="mdi mdi-pencil"></i></a>
                                                    <a href="#" class="btn btn-icons btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            <!-- END BLOCK QUOTE -->
            </div>

        <!-- content-wrapper ends -->
        </div>
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© 2018
                    <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
                    <i class="mdi mdi-heart text-danger"></i>
                </span>
            </div>
        </footer>
    <!-- partial -->
    </div>
    <!-- main-panel ends -->
<% include partials/admin-footer.ejs %>
